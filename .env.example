# watsonx.ai API 설정
# 1. IBM Cloud에서 API 키 생성: https://cloud.ibm.com/iam/apikeys
WATSONX_API_KEY=your_api_key_here

# 2. Watson Data API 엔드포인트 (자산 업로드용)
# 미국 남부: https://api.dataplatform.cloud.ibm.com
# 영국: https://api.eu-gb.dataplatform.cloud.ibm.com
# 일본: https://api.jp-tok.dataplatform.cloud.ibm.com
WATSONX_ENDPOINT=https://api.dataplatform.cloud.ibm.com

# 3. watsonx.ai 웹 콘솔에서 프로젝트 생성 후 프로젝트 ID 복사
WATSONX_PROJECT_ID=your_project_id_here

# 출력 디렉토리 설정
OUTPUT_DIRECTORY=./output

# 재시도 설정
MAX_RETRIES=3

# 타임아웃 설정 (초)
TIMEOUT=300

# GitHub 업로드 설정 (선택적)
# 1. GitHub Personal Access Token 생성: https://github.com/settings/tokens
# 2. repo 권한 필요 (Contents: Write)
GITHUB_TOKEN=your_github_token_here

# 3. GitHub 저장소 URL
GITHUB_REPO_URL=https://github.com/your-username/your-repo.git

# 4. GitHub 업로드 활성화 (true/false)
GITHUB_UPLOAD_ENABLED=true